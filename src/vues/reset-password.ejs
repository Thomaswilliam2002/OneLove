<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Réinitialiser le mot de pass</title>

    <!-- Meta -->
    <meta name="description" content="Marketplace for Bootstrap Admin Dashboards">
    <meta property="og:title" content="Admin Templates - Dashboard Templates">
    <meta property="og:description" content="Marketplace for Bootstrap Admin Dashboards">
    <meta property="og:type" content="Website">
    <link rel="shortcut icon" href="assets/images/favicon.svg">

    <!-- *************
			************ CSS Files *************
		************* -->
    <link rel="stylesheet" href="assets/fonts/remix/remixicon.css">
    <link rel="stylesheet" href="assets/css/main.min.css">

  </head>

  <body class="login-bg">

    <!-- Container starts -->
    <div class="container">

      <!-- Auth wrapper starts -->
      <div class="auth-wrapper">
        <% if(msg) {%>
          <% if(msg === 'mdp') {%>
            <div class="alert bg-white border alert-dismissible fade show text-success" role="alert">
              <b>Mot de passe </b> incorrecte !
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% }%>
          <% if(msg === 'modif') {%>
            <div class="alert bg-white border alert-dismissible fade show text-info" role="alert">
              <b>Poste </b> modifier avec succes !
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% }%>
          <% if(msg === 'sup') {%>
            <div class="alert bg-white border alert-dismissible fade show text-danger" role="alert">
              <b>Poste </b> supprimer avec succes !
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% }%>
        <% }%>
        <!-- Form starts -->
        <form action="/resetTraitement/<%= user.Personnel.id_personnel %>?_method=PUT" method="post" name="form">
          
          <div class="auth-box">
            <a href="" class="auth-logo mb-4">
              <img src="assets/images/logo-dark.svg" alt="Bootstrap Gallery">
            </a>

            <h4 class="mb-4">Réinitialiser le mot de pass</h4>

            <div id="msg" class="alert bg-white border alert-dismissible fade show text-danger" role="alert" style="display: none;">
              Les <b>nouveau mot de pass </b>ne sont pas identique !
            </div>

            <div class="mb-3">
              <label class="form-label" for="currentPwd">Mot de pass Actuel <span class="text-danger">*</span></label>
              <div class="input-group ">
                <input type="password" id="currentPwd" name="Pwd" class="form-control" placeholder="Entrer le mot de pass actuel" required>
                <button class="btn btn-outline-secondary" type="button">
                  <i class="ri-eye-line text-primary"></i>
                </button>
              </div>
            </div>

            <div class="mb-3">
              <label class="form-label" for="newPwd">Nouveau mot de pass <span class="text-danger">*</span></label>
              <div class="input-group ">
                <input type="password" id="newPwd" name="newPwd" class="form-control" placeholder="Entrer le nouveau mot de pass" required>
                <button class="btn btn-outline-secondary" type="button">
                  <i class="ri-eye-line text-primary"></i>
                </button>
              </div>
              <div class="form-text">
                Votre mot de pass doit faire entre 8-20 caractère.
              </div>
            </div>

            <div class="mb-3">
              <label class="form-label" for="confNewPwd">Confirmer le nouveau mot de pass <span class="text-danger">*</span></label>
              <div class="input-group ">
                <input type="password" id="confNewPwd" name="cnewPwd" class="form-control" placeholder="Confirmer le nouveau mot de pass" required>
                <button class="btn btn-outline-secondary" type="button">
                  <i class="ri-eye-line text-primary"></i>
                </button>
              </div>
            </div>

            <div class="mb-3 d-grid">
              <button type="submit" class="btn btn-primary" id="btn"> 
                Réinitialiser
              </button>
            </div>

          </div>

        </form>
        <!-- Form ends -->

      </div>
      <!-- Auth wrapper ends -->

    </div>
    <!-- Container ends -->
    <script>
      const npw = document.getElementById('newPwd');
      const cnpw = document.getElementById('confNewPwd');
      const btn = document.getElementById('btn');
      const msg = document.getElementById('msg');
      const f =document.querySelector('form')
      f.addEventListener('submit', (e) => {
        if(npw.value !== cnpw.value){
          e.preventDefault()
          msg.style.display = "block";
        }
      })
    </script>
  </body>


