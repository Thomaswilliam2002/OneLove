<!DOCTYPE html>
<html lang="en">

  
<!-- Mirrored from buybootstrap.com/demos/medflex/medflex-admin-dashboard/salaries.html by HTTrack Website Copier/3.x [XR&CO'2014], Thu, 15 May 2025 12:16:25 GMT -->
<%- include('head')%>

  <body>

    <!-- Page wrapper starts -->
    <div class="page-wrapper">

      <!-- App header starts -->
      <% if(user.Personnel.type_personnel === 'admin'){%>
        <%- include('header')%>
      <% }else{%>
        <%- include('header-staff')%>
      <% }%>
      <!-- App header ends -->

      <!-- Main container starts -->
      <div class="main-container">

        <!-- Sidebar wrapper starts -->
        <% if(user.Personnel.type_personnel === 'admin'){%>
          <%- include('menu')%>
        <% }else{%>
          <%- include('menu-staff')%>
        <% }%>
        <!-- Sidebar wrapper ends -->

        <!-- App container starts -->
        <div class="app-container">

          <!-- App hero header starts -->
          <div class="app-hero-header d-flex align-items-center">

            <!-- Breadcrumb starts -->
            <ol class="breadcrumb">
              <li class="breadcrumb-item">
                <i class="ri-home-8-line lh-1 pe-3 me-3 border-end"></i>
                <a href="/index">Accueil</a>
              </li>
              <li class="breadcrumb-item text-primary" aria-current="page">
                Listes des Client
              </li>
            </ol>
            <!-- Breadcrumb ends -->

            <!-- Sales stats starts -->
            
            <!-- Sales stats ends -->

          </div>
          <!-- App Hero header ends -->

          <!-- App body starts -->
          <div class="app-body">
            <% if(msg) {%>
                <% if(msg === 'ajout') {%>
                  <div class="alert bg-white border alert-dismissible fade show text-success" role="alert">
                    <b>Client </b> ajouter avec succes !
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
                <% }%>
                <% if(msg === 'modif') {%>
                  <div class="alert bg-white border alert-dismissible fade show text-info" role="alert">
                    <b>Client </b> modifier avec succes !
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
                <% }%>
                <% if(msg === 'sup') {%>
                  <div class="alert bg-white border alert-dismissible fade show text-danger" role="alert">
                    <b>Client </b> supprimer avec succes !
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
                <% }%>
              <% }%>
            <!-- Row starts -->
            <div class="row gx-3">
              <div class="col-sm-12">
                <div class="card">
                  <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="card-title">Liste des client</h5>
                    <a href="/formAddClient" class="btn btn-primary ms-auto">Ajouter un client</a>
                  </div>
                  <div class="card-body">

                    <!-- Table starts -->
                    <div class="table-responsive">
                      <table id="basicExample" class="table m-0 align-middle">
                        <thead class="text-center">
                          <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Prenome</th>
                            <th>Numero</th>
                            <th>Comentaire</th>
                            <th>Actions</th>
                          </tr>
                        </thead>
                        <tbody class="text-center">
                          <% i = 1; clients.forEach(client => { %>
                          <tr>
                            <td><%= i %></td>
                            <td><%= client.nom_client %></td>
                            <td><%= client.prenom_client %></td>
                            <td><%= client.numero_client %></td>
                            <td><%= client.comentaire_client %></td>
                            <td>
                                <div class="d-inline-flex gap-1">
                                  <!-- ----------------------------------------------------------------------------------- -->
                                  
                                    <!-- Card starts -->
                                        <!-- Button trigger modal -->
                                        <button type="button" data-bs-toggle="modal"
                                          data-bs-target="#<%= client.id_client %>ModalCenter" class="btn btn-outline-danger btn-sm">
                                          <i class="ri-delete-bin-line"></i>
                                        </button>
                                        <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                          data-bs-target="#exampleModalXl" data-info='<%= client.id_client %>' data-bs-title="<%= client.nom_client %> <%= client.prenom_client %>">
                                          <i class="ri-eye-line"></i>
                                        </button>
                                        <!-- Modal -->
                                        <div class="modal fade" id="<%= client.id_client %>ModalCenter" tabindex="-1"
                                          aria-labelledby="<%= client.id_client %>ModalCenterTitle" aria-hidden="true">
                                          <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                              <div class="modal-header">
                                                <h5 class="modal-title" id="<%= client.id_client %>ModalCenterTitle">
                                                  Supprimer
                                                </h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                              </div>
                                              <div class="modal-body">
                                                <p>Voulez-vous vraiment supprimer le Client <%= client.nom_client %> ?</p>
                                              </div>
                                              <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                  annuler
                                                </button>
                                                <form action="/deleteClient/<%= client.id_client %>?_method=DELETE" method="post">
                                                  <div class="col-sm-12">
                                                    <div class="d-flex gap-2 justify-content-end">
                                                      <button type="submit" class="btn btn-danger">Supprimer</button>
                                                    </div>
                                                  </div>
                                              </form>
                                              </div>
                                            </div>
                                          </div>
                                        </div>
                                    <!-- Card ends -->
                                  
                                  <!-- ----------------------------------------------------------------------------------------- -->
                                    
                                </div>
                            </td>
                          </tr>
                        <% i++}) %>
                        </tbody>
                      </table>
                    </div>
                    <!-- Table ends -->

                  </div>
                </div>
              </div>
            </div>
            <!-- Row ends -->
            <div>
              <!-- Modal XL -->
              <div class="modal fade" id="exampleModalXl" tabindex="-1" aria-labelledby="exampleModalXlLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-xl">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalXlLabel">
                        Extra large modal
                      </h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      <div class="table-responsive">
                        <table id="customButtons" class="table m-0 align-middle">
                          <thead class="text-center">
                            <tr>
                              <th>ID</th>
                              <th>Date de début</th>
                              <th>Date de fin</th>
                              <th>Montant</th>
                              <th>Nuitée</th>
                              <th>Appart attribué</th>
                            </tr>
                          </thead>
                          <tbody class="text-center" id="modolBody">
                            
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- App body ends -->

          <!-- App footer starts -->
          <div class="app-footer bg-white">
            <span>© OneLove admin 2026</span>
          </div>
          <!-- App footer ends -->

        </div>
        <!-- App container ends -->

      </div>
      <!-- Main container ends -->

    </div>
    <!-- Page wrapper ends -->

    <!-- *************
			************ JavaScript Files *************
		************* -->
    <!-- Required jQuery first, then Bootstrap Bundle JS -->
    <%- include('script')%>
    <script>
      window.addEventListener("pageshow", function (event) {
        var historyTraversal = event.persisted || 
                               (typeof window.performance != "undefined" && 
                                window.performance.navigation.type === 2);
        if (historyTraversal) {
            // Si l'utilisateur est revenu en arrière, on recharge la page proprement
            window.location.reload();
        }
      });
      const journal = JSON.parse(`<%- JSON.stringify(japparts) %>`)
      const modolBody = document.getElementById('modolBody');

      document.addEventListener('DOMContentLoaded', function () {
          var modal = document.getElementById('exampleModalXl');
      
          modal.addEventListener('show.bs.modal', function (event) {
              var button = event.relatedTarget;

              var id = button.getAttribute('data-info');
              var title = button.getAttribute('data-bs-title');
              var text = button.getAttribute('data-bs-text');
      
              // applie au modal
              document.getElementById('exampleModalXlLabel').textContent = title;

              modolBody.innerHTML = ''
              journal.forEach((journal, index) => {
                console.log(typeof journal.id_client, typeof id)
                if(journal.id_client === parseInt(id)){
                  modolBody.insertAdjacentHTML('beforeend',`
                      <tr>
                        <td>${index}</td>
                        <td>${journal.date_debut.split('T')[0]}</td>
                        <td>${journal.date_fin.split('T')[0]}</td>
                        <td>${journal.loyer}</td>
                        <td>${journal.nuiter}</td>
                        <td>${journal.Appartement.nom_appart}</td>
                      </tr>
                    `)
                }
              });
              // document.getElementById('modalText').textContent = text;
          });
      });
    </script>
  </body>


