<%- include('head')%>

  <body>

    <!-- Page wrapper starts -->
    <div class="page-wrapper">

      <!-- App header starts -->
      <% if(user.Personnel.type_personnel === 'admin'){%>
        <%- include('header')%>
      <% }else{%>
        <%- include('header-staff')%>
      <% }%>
      <!-- App header ends -->

      <!-- Main container starts -->
      <div class="main-container">

        <!-- Sidebar wrapper starts -->
        <% if(user.Personnel.type_personnel === 'admin'){%>
          <%- include('menu')%>
        <% }else{%>
          <%- include('menu-staff')%>
        <% }%>
        <!-- Sidebar wrapper ends -->

        <!-- App container starts -->
        <div class="app-container">

          <!-- App hero header starts -->
          <div class="app-hero-header d-flex align-items-center">

            <!-- Breadcrumb starts -->
            <ol class="breadcrumb">
              <li class="breadcrumb-item">
                <i class="ri-home-8-line lh-1 pe-3 me-3 border-end"></i>
                <a href="index.html">Accueil</a>
              </li>
              <li class="breadcrumb-item text-primary" aria-current="page">
                Modifier un Appartement
              </li>
            </ol>
            <!-- Breadcrumb ends -->

            <!-- Sales stats starts -->
            
            <!-- Sales stats ends -->

          </div>
          <!-- App Hero header ends -->

          <!-- App body starts -->
          <div class="app-body">
            
            <!-- Row starts -->
            <div class="row gx-3">
              <div class="col-sm-12">
                <div class="card">
                  <div class="card-header">
                    <h5 class="card-title">Modifier les information de l'Appartement</h5>
                  </div>
                  <div class="card-body">
                  <form action="/updateAppart/<%= appartement.id_appart %>?_method=PUT" method="post">
                    <!-- Row starts -->
                    <div class="row gx-3" type = "hidden">
                      <div class="col-xxl-3 col-lg-4 col-sm-6">
                        <div class="mb-3">
                          <label class="form-label" for="a1">Nom</label>
                          <input type="text" class="form-control" id="a1" value="<%= appartement.nom_appart %>" name="nom">
                        </div>
                      </div>
                      <div class="col-xxl-3 col-lg-4 col-sm-6">
                        <div class="mb-3">
                          <label class="form-label" for="a2">prix</label>
                          <input type="number" min="0" step="0.01" class="form-control" id="a2" value="<%= appartement.prix_appart %>" name="prix">
                        </div>
                      </div>
                      
                      <div class="col-xxl-3 col-lg-4 col-sm-6">
                        <div class="mb-3">
                          <label class="form-label" for="a5">Adresse</label>
                          <!-- <input type="text" class="form-control" id="a5" value=""> -->
                          <textarea class="form-control" id="a9" placeholder="<%= appartement.adresse_appart %>" 
                            rows="3" value="" name="adresse"><%= appartement.adresse_appart %></textarea>
                        </div>
                      </div>
                      <div class="col-xxl-3 col-lg-4 col-sm-6">
                        <div class="mb-3">
                            <label class="form-label" for="a6">Disponibilité<span class="text-danger">*</span></label>
                            <select class="form-select" id="sdep" name="dispo">
                              <option value="Disponible">Disponible</option>
                              <option value="Indisponible">Indisponible</option>
                              <option value="Occuper">Occuper</option>
                            </select>
                        </div>
                      </div>
                      <div class="col-sm-12">
                        <div class="d-flex gap-2 justify-content-end">
                          <button type="submit" class="btn btn-primary">Ajouter</button>
                        </div>
                      </div>
                    </div>
                    <!-- Row ends -->
                  </form>
                  </div>
                </div>
              </div>
            </div>
            <!-- Row ends -->

          </div>
          <!-- App body ends -->

          <!-- App footer starts -->
          <div class="app-footer bg-white">
            <span>© OneLove admin 2026</span>
          </div>
          <!-- App footer ends -->

        </div>
        <!-- App container ends -->

      </div>
      <!-- Main container ends -->

    </div>
    <!-- Page wrapper ends -->

    <!-- *************
			************ JavaScript Files *************
		************* -->
    <!-- Required jQuery first, then Bootstrap Bundle JS -->
    <%- include('script')%>
    <script>
      window.addEventListener("pageshow", function (event) {
        var historyTraversal = event.persisted || 
                               (typeof window.performance != "undefined" && 
                                window.performance.navigation.type === 2);
        if (historyTraversal) {
            // Si l'utilisateur est revenu en arrière, on recharge la page proprement
            window.location.reload();
        }
      });
      document.getElementById('a6').valueAsDate = new Date();
    </script>
  </body>


