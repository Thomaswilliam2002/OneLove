<%- include('head')%>

  <body>

    <!-- Page wrapper starts -->
    <div class="page-wrapper">

      <!-- App header starts -->
      <% if(user.Personnel.type_personnel === 'admin'){%>
        <%- include('header')%>
      <% }else{%>
        <%- include('header-staff')%>
      <% }%>
      <!-- App header ends -->

      <!-- Main container starts -->
      <div class="main-container">

        <!-- Sidebar wrapper starts -->
        <% if(user.Personnel.type_personnel === 'admin'){%>
          <%- include('menu')%>
        <% }else{%>
          <%- include('menu-staff')%>
        <% }%>
        <!-- Sidebar wrapper ends -->

        <!-- App container starts -->
        <div class="app-container">

          <!-- App hero header starts -->
          <div class="app-hero-header d-flex align-items-center">

            <!-- Breadcrumb starts -->
            <ol class="breadcrumb">
              <li class="breadcrumb-item">
                <i class="ri-home-8-line lh-1 pe-3 me-3 border-end"></i>
                <a href="index.html">Accueil</a>
              </li>
              <li class="breadcrumb-item text-primary" aria-current="page">
                Ajouter une Categorie d'article
              </li>
            </ol>
            <!-- Breadcrumb ends -->

            <!-- Sales stats starts -->
            
            <!-- Sales stats ends -->

          </div>
          <!-- App Hero header ends -->

          <!-- App body starts -->
          <div class="app-body">

            <% if(msg) {%>
              
                <% if(msg === 'ajout') {%>
                  <div class="alert bg-white border alert-dismissible fade show text-success" role="alert">
                    <b>Categorie </b> ajouter avec succes !
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
                <% }%>
                <% if(msg === 'modif') {%>
                  <div class="alert bg-white border alert-dismissible fade show text-info" role="alert">
                    <b>Categorie </b> modifier avec succes !
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
                <% }%>
                <% if(msg === 'sup') {%>
                  <div class="alert bg-white border alert-dismissible fade show text-danger" role="alert">
                    <b>Categorie </b> supprimer avec succes !
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
                <% }%>
              
            <% }%>

            <!-- Row starts -->
            <div class="row gx-3">
                <div class="col-sm-12">
                  <div class="card">
                    <div class="card-header d-flex align-items-center justify-content-between">
                      <h5 class="card-title">Liste des Categories</h5>
                      <a href="#formAddCateg" class="btn btn-primary ms-auto">Ajouter une nouvelle Categorie d'article</a>
                    </div>
                    <div class="card-body">
                      <!-- Table starts -->
                      <div class="table-responsive">
                        <table id="customButtons" class="table truncate m-0 align-middle dataTable" aria-describedby="basicExample_filter">
                          <thead class="text-center">
                            <tr>
                              <th aria-controls="basicExample">ID</th>
                              <th>Nom de la Categorie</th>
                              <th>Description</th>
                              <th>Action</th>
                            </tr>
                          </thead>
                          <tbody class="text-center">
                            <% i = 1; categories.forEach(categorie => { %>
                                <tr>
                                    <td><%= i%></td>
                                  <td><%= categorie.nom %></td>
                                  <td>
                                      <%= categorie.description %>
                                  </td>
                                  <td>
                                    <div class="d-inline-flex gap-1">
                                      <!-- ----------------------------------------------------------------------------------- -->
                                      <div class="col-sm-4">
                                        <!-- Card starts -->
                                            <!-- Button trigger modal -->
                                            <button type="button" data-bs-toggle="modal"
                                              data-bs-target="#<%= categorie.id_categ %>ModalCenter" class="btn btn-outline-danger btn-sm">
                                              <i class="ri-delete-bin-line"></i>
                                            </button>
                                            <!-- Modal -->
                                            <div class="modal fade" id="<%= categorie.id_categ %>ModalCenter" tabindex="-1"
                                              aria-labelledby="<%= categorie.id_categ %>ModalCenterTitle" aria-hidden="true">
                                              <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                  <div class="modal-header">
                                                    <h5 class="modal-title" id="<%= categorie.id_categ %>ModalCenterTitle">
                                                      Confirmer
                                                    </h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                  </div>
                                                  <div class="modal-body">
                                                    <p>Voulez-vous vraiment supprimer la categorie <%= categorie.nom %>?</p>
                                                    <p>Tout les article associer a cette categorie seront egalement effacer</p>
                                                  </div>
                                                  <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                      annuler
                                                    </button>
                                                    <form action="/deleteCateg/<%= categorie.id_categ %>?_method=DELETE" method="post">
                                                      <div class="col-sm-12">
                                                        <div class="d-flex gap-2 justify-content-end">
                                                          <button type="submit" class="btn btn-danger">Supprimer</button>
                                                        </div>
                                                      </div>
                                                    </form>
                                                  </div>
                                                </div>
                                              </div>
                                            </div>
                                        <!-- Card ends -->
                                      </div>
                                      <!-- ----------------------------------------------------------------------------------------- -->
                                      
                                      <!-- ----------------------------------------------------------------------------------- -->
                                      
                                      <!-- ----------------------------------------------------------------------------------------- -->
                                      
                                    </div>
                                  </td>
                                </tr>
                            <% i++}) %>
                          </tbody>
                        </table>
                      </div>
                      <!-- Table ends -->
  
                      <!-- Modal Delete Row -->
                      <!-- ----------------------------------------------------------------------------------- -->
                      
                      <!-- ----------------------------------------------------------------------------------- -->
                    </div>
                  </div>
                </div>
              </div>
              <!-- Row ends -->
               <br>
               <!-- ----------------------------------------------------------------------------------- -->

            <!-- Row starts -->
            <div class="row gx-3">
              <div class="col-xl-12">
                <div class="card">
                  <div class="card-body">

                    <!-- Custom tabs starts -->
                    <div class="custom-tabs-container">

                      <!-- Nav tabs starts -->
                      
                      <!-- Nav tabs ends -->

                      <!-- Tab content starts -->
                      <div class="tab-content h-350">
                        <div class="tab-pane fade show active" id="oneA" role="tabpanel">
                          <form action="/addCateg" method="post" id="formAddCateg">
                          <!-- Row starts -->
                          <div class="row gx-3">
                            <div class="col-xxl-3 col-lg-4 col-sm-6">
                              <div class="mb-3">
                                <label class="form-label" for="a1">Nom de la Categorie <span class="text-danger">*</span></label>
                                <div class="input-group">
                                  <span class="input-group-text">
                                  </span>
                                  <input type="text" class="form-control" id="a1" name="nom" placeholder="Entrer le nom de la Categorie" required>
                                </div>
                              </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="mb-3">
                                  <label class="form-label" for="a8">Description <span class="text-danger">*</span></label>
                                  <textarea class="form-control" id="a8" placeholder="ajouter une description" rows="2" name="desc"></textarea>
                                </div>
                            </div>
                          <!-- Row ends -->
                        </div>
                      <!-- Tab content ends -->
                    </div>
                    <!-- Custom tabs ends -->

                    <!-- Card acrions starts -->
                    <div class="col-sm-12">
                      <div class="d-flex gap-2 justify-content-end">
                        <button type="submit" class="btn btn-primary">Ajouter</button>
                      </div>
                    </div>
                    <!-- Card acrions ends -->
                  </form>
                  </div>
                </div>
              </div>
            </div>
            <!-- Row ends -->

          </div>
          <!-- App body ends -->

          <!-- App footer starts -->
          <div class="app-footer bg-white">
            <span>Â© OneLove admin 2024</span>
          </div>
          <!-- App footer ends -->

        </div>
        <!-- App container ends -->

      </div>
      <!-- Main container ends -->

    </div>
    <!-- Page wrapper ends -->

    <!-- *************
			************ JavaScript Files *************
		************* -->
        <%- include('script')%>
  </body>


