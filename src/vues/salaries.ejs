    <%- include('script')%>
    <script>
      window.addEventListener("pageshow", function (event) {
        var historyTraversal = event.persisted || 
                               (typeof window.performance != "undefined" && 
                                window.performance.navigation.type === 2);
        if (historyTraversal) {
            // Si l'utilisateur est revenu en arrière, on recharge la page proprement
            window.location.reload();
        }
      });
      const sanction = []
      const tbody = document.getElementById("tbody")
      let data = JSON.parse('<%- JSON.stringify(datas) %>')
      
      // console.log(data[0])
      let c = 0
      data[0].forEach((staff, inst) => {
        data[1].forEach((punition, inpu) => {
          if(staff.id_occupe === punition.id_occupe){
            c+= punition.montan_defalquer
          }
        })
        // console.log(c)
        sanction.push(c)
        c = 0
      });

      data[0].forEach((staff, inst) => {
        tbody.insertAdjacentHTML('beforeend',`
            <tr>
              <td>${inst + 1}</td>
              <td>
                ${staff.Personnel.nom} ${staff.Personnel.prenom}
              </td>
              <td>${staff.Poste.nom_poste}</td>
              <td class = "salaire" data-salaire="${staff.Poste.salaire}">${staff.Poste.salaire}</td>
              <td class="periode">${staff.Personnel.periode}</td>
              <td><input type="number" min="0" value="0" step="0.01" class="form-control sanction"></td>
              <td class="resultat calcule">${(calculerSalaire(staff.Poste.salaire, staff.Personnel.periode)).toFixed(2)}</td>
            </tr>
          
        `)
      });

      function calculerSalaire(salaire, periode) {
        switch (periode.toLowerCase()) {
          case 'journalier':
            return salaire / 30;
          case 'hebdomadaire':
            return salaire / 4;
          case 'quinzaine':
            return salaire / 2;
          case 'horaire':
            return salaire / (30 * 8);
          case 'mensuel':
          default:
            return salaire;
        }
      }

      document.addEventListener('input', function (e) {
        if (!e.target.classList.contains('sanction')) return;

        const row = e.target.closest('tr');

        const salaireBase = parseFloat(
          row.querySelector('.salaire').dataset.salaire
        );

        const periode = row.querySelector('.periode').textContent.trim();
        const sanction = parseFloat(e.target.value) || 0;

        const salairePeriode = calculerSalaire(salaireBase, periode);
        const resultat = salairePeriode - sanction;

        row.querySelector('.resultat').textContent =
          resultat > 0 ? resultat.toFixed(2) : '0.00';
      });

      const resulta = document.getElementById('resulta')
      const observer= new MutationObserver((mutations, observer) => {
        mutations.forEach((mutation) => {
          let allCase = document.querySelectorAll('.calcule')
          let sum = 0
          console.log(allCase.length)
          if(allCase.length > 0){
            allCase.forEach((td, index) => {
              //console.log(td)
              sum += parseFloat(td.innerText)
              resulta.innerText = sum
            })
          }else{
            resulta.innerText = 0
          }
          console.log('change', mutation)
        })
      })

      observer.observe(tbody, {
        childList: true,
        subtree: true,
        characterData: true
      })
    </script>
