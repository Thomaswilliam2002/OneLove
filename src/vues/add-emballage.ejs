<%- include('head')%>

  <body>

    <!-- Page wrapper starts -->
    <div class="page-wrapper">

      <!-- App header starts -->
      <% if(user.Personnel.type_personnel === 'admin'){%>
        <%- include('header')%>
      <% }else{%>
        <%- include('header-staff')%>
      <% }%>
      <!-- App header ends -->

      <!-- Main container starts -->
      <div class="main-container">

        <!-- Sidebar wrapper starts -->
        <% if(user.Personnel.type_personnel === 'admin'){%>
          <%- include('menu')%>
        <% }else{%>
          <%- include('menu-staff')%>
        <% }%>
        <!-- Sidebar wrapper ends -->

        <!-- App container starts -->
        <div class="app-container">

          <!-- App hero header starts -->
          <div class="app-hero-header d-flex align-items-center">

            <!-- Breadcrumb starts -->
            <ol class="breadcrumb">
              <li class="breadcrumb-item">
                <i class="ri-home-8-line lh-1 pe-3 me-3 border-end"></i>
                <a href="index.html">Accueil</a>
              </li>
              <li class="breadcrumb-item text-primary" aria-current="page">
                Ajouter un nouvel Emballage
              </li>
            </ol>
            <!-- Breadcrumb ends -->

            <!-- Sales stats starts -->
            
            <!-- Sales stats ends -->

          </div>
          <!-- App Hero header ends -->

          <!-- App body starts -->
          <div class="app-body">

            <!-- Row starts -->
            <div class="row gx-3">
              <div class="col-xl-12">
                <div class="card">
                  <div class="card-body">

                    <!-- Custom tabs starts -->
                    <div class="custom-tabs-container">

                      <!-- Nav tabs starts -->
                      
                      <!-- Nav tabs ends -->

                      <!-- Tab content starts -->
                      <div class="tab-content h-350">
                        <div class="tab-pane fade show active" id="oneA" role="tabpanel">
                          <form action="/addEmballage" method="post">
                          <!-- Row starts -->
                          <div class="row gx-3">
                            <div class="col-xxl-3 col-lg-4 col-sm-6">
                              <div class="mb-3">
                                <label class="form-label" for="a1">Nom de l'emballage <span class="text-danger">*</span></label>
                                <div class="input-group">
                                  <input type="text" class="form-control" id="a1" name="nom" placeholder="Entrer le nom de la cuisine" required>
                                </div>
                              </div>
                            </div>
                            <div class="col-xxl-3 col-lg-4 col-sm-6">
                                <div class="mb-3">
                                  <label class="form-label" for="a1">Categorie<span class="text-danger">*</span></label>
                                  <select class="form-select" id="dep" name="categ">
                                    <% if(categories){ categories.forEach(categorie => {%>
                                        <option value="<%= categorie.id_categ %>"><%= categorie.nom %></option>
                                    <% })}else{ %>
                                      <option value="null">Aucune categorie disponinble</option>
                                    <% } %>
                                  </select> 
                                </div>
                            </div>
                            <div class="col-xxl-3 col-lg-4 col-sm-6">
                                <div class="mb-3">
                                  <label class="form-label" for="a1">Quantité initial a stocker <span class="text-danger">*</span></label>
                                  <div class="input-group">
                                    <input type="number" min="0" step="0.01" class="form-control" id="a1" name="qt" placeholder="Entrer la quantité initial a stocker " required>
                                  </div>
                                </div>
                            </div>
                            <div class="col-xxl-3 col-lg-4 col-sm-6">
                              <div class="mb-3">
                                <label class="form-label" for="a1">Seuil d'avertissement <span class="text-danger">*</span></label>
                                <div class="input-group">
                                  <input type="number" min="0" step="0.01" class="form-control" id="a1" name="seuil" placeholder="Entrer seuil d'avertissement" required>
                                </div>
                              </div>
                          </div>
                            <div class="col-sm-12">
                                <div class="mb-3">
                                  <label class="form-label" for="a8">Description <span class="text-danger">*</span></label>
                                  <textarea class="form-control" id="a8" placeholder="ajouter une description" rows="2" name="desc"></textarea>
                                </div>
                            </div>
                          <!-- Row ends -->

                        </div>
                        
                      <!-- Tab content ends -->

                    </div>
                    <!-- Custom tabs ends -->

                    <!-- Card acrions starts -->
                    <div class="col-sm-12">
                      <div class="d-flex gap-2 justify-content-end">
                        <button type="submit" class="btn btn-primary">Ajouter</button>
                      </div>
                    </div>
                    <!-- Card acrions ends -->
                  </form>
                  </div>
                </div>
              </div>
            </div>
            <!-- Row ends -->

          </div>
          <!-- App body ends -->

          <!-- App footer starts -->
          <div class="app-footer bg-white">
            <span>© OneLove admin 2024</span>
          </div>
          <!-- App footer ends -->

        </div>
        <!-- App container ends -->

      </div>
      <!-- Main container ends -->

    </div>
    <!-- Page wrapper ends -->

    <!-- *************
			************ JavaScript Files *************
		************* -->
        <%- include('script')%>
  </body>


