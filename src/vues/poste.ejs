    <!-- Page wrapper starts -->
    <div class="page-wrapper">

      <!-- App header starts -->
      <% if(user.Personnel.type_personnel === 'admin'){%>
        <%- include('header')%>
      <% }else{%>
        <%- include('header-staff')%>
      <% }%>
      <!-- App header ends -->

      <!-- Main container starts -->
      <div class="main-container">

        <!-- Sidebar wrapper starts -->
        <% if(user.Personnel.type_personnel === 'admin'){%>
          <%- include('menu')%>
        <% }else{%>
          <%- include('menu-staff')%>
        <% }%>
        <!-- Sidebar wrapper ends -->

        <!-- App container starts -->
        <div class="app-container">

          <!-- App hero header starts -->
          <div class="app-hero-header d-flex align-items-center">

            <!-- Breadcrumb starts -->
            <ol class="breadcrumb">
              <li class="breadcrumb-item">
                <i class="ri-home-8-line lh-1 pe-3 me-3 border-end"></i>
                <a href="/index">Accueil</a>
              </li>
              <li class="breadcrumb-item text-primary" aria-current="page">
                Postes
              </li>
            </ol>
            <!-- Breadcrumb ends -->

            <!-- Sales stats starts -->
            
            <!-- Sales stats ends -->

          </div>
          <!-- App Hero header ends -->

          <!-- App body starts -->
          <div class="app-body">
            <% if(msg) {%>
              
                <% if(msg === 'ajout') {%>
                  <div class="alert bg-white border alert-dismissible fade show text-success" role="alert">
                    <b>Poste </b> ajouter avec succes !
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
                <% }%>
                <% if(msg === 'modif') {%>
                  <div class="alert bg-white border alert-dismissible fade show text-info" role="alert">
                    <b>Poste </b> modifier avec succes !
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
                <% }%>
                <% if(msg === 'sup') {%>
                  <div class="alert bg-white border alert-dismissible fade show text-danger" role="alert">
                    <b>Poste </b> supprimer avec succes !
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
                <% }%>
              
            <% }%>


            <!-- Row starts -->
            <div class="row gx-3">
              <div class="col-sm-12">
                <div class="card">
                  <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="card-title">Liste des Postes</h5>
                    <a href="#formAddPoste" class="btn btn-primary ms-auto">Ajouter un nouveau Poste</a>
                  </div>
                  <div class="card-body">
                    <!-- Table starts -->
                    <div class="table-responsive">
                      <table id="customButtons" class="table truncate m-0 align-middle dataTable" aria-describedby="basicExample_filter">
                        <thead class="text-center">
                          <tr>
                            <th aria-controls="basicExample">ID</th>
                            <th>Nom du poste</th>
                            <th>Salaire</th>
                            <th>Description</th>
                            <th>Action</th>
                          </tr>
                        </thead>
                        <tbody class="text-center" id="tbody">
                          <% ref = ['admin', 'comptable', 'caissier']; postes.forEach(poste => { %>
                              <tr>
                                <td><%= poste.id_poste %></td>
                                <td>
                                    <%= poste.nom_poste %>
                                </td>
                                <td class="calcule"><%= poste.salaire %></td>
                                <td><%= poste.description %></td>
                                <td>
                                  <div class="d-inline-flex gap-1">
                                    <% if(!ref.includes(poste.nom_poste.toLowerCase())){ %>
                                    <!-- ----------------------------------------------------------------------------------- -->
                                      
                                        <!-- Card starts -->
                                            <!-- Button trigger modal -->
                                            <button type="button" data-bs-toggle="modal"
                                              data-bs-target="#<%= poste.id_poste %>ModalCenter" class="btn btn-outline-danger btn-sm">
                                              <i class="ri-delete-bin-line"></i>
                                            </button>
                                            <!-- Modal -->
                                            <div class="modal fade" id="<%= poste.id_poste %>ModalCenter" tabindex="-1"
                                              aria-labelledby="<%= poste.id_poste %>ModalCenterTitle" aria-hidden="true">
                                              <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                  <div class="modal-header">
                                                    <h5 class="modal-title" id="<%= poste.id_poste %>ModalCenterTitle">
                                                      Confirmer
                                                    </h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                  </div>
                                                  <div class="modal-body">
                                                    <p>Voulez-vous vraiment supprimer le poste <%= poste.nom_poste %>?</p>
                                                  </div>
                                                  <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                      annuler
                                                    </button>
                                                    <form action="/deletePoste/<%= poste.id_poste %>?_method=DELETE" method="post">
                                                      <div class="col-sm-12">
                                                        <div class="d-flex gap-2 justify-content-end">
                                                          <button type="submit" class="btn btn-danger">Supprimer</button>
                                                        </div>
                                                      </div>
                                                    </form>
                                                  </div>
                                                </div>
                                              </div>
                                            </div>
                                        <!-- Card ends -->
                                      
                                    <% } %>
                                    <!-- ----------------------------------------------------------------------------------------- -->
                                    
                                    <!-- ----------------------------------------------------------------------------------- -->
                                    
                                      <!-- Card starts -->
                                          <!-- Button trigger modal -->
                                          <button type="button" data-bs-toggle="modal"
                                            data-bs-target="#<%= poste.id_poste %>ModalCenter<%= poste.id_poste %>" class="btn btn-outline-success btn-sm" data-bs-title="Modifier">
                                            <i class="ri-edit-box-line"></i>
                                          </button>
                                          <!-- Modal -->
                                          <div class="modal fade" id="<%= poste.id_poste %>ModalCenter<%= poste.id_poste %>" tabindex="-1"
                                            aria-labelledby="<%= poste.id_poste %>ModalCenterTitle<%= poste.id_poste %>" aria-hidden="true">
                                            <div class="modal-dialog modal-lg">
                                              <div class="modal-content">
                                                <div class="modal-header">
                                                  <h5 class="modal-title" id="<%= poste.id_poste %>ModalCenterTitle<%= poste.id_poste %>">
                                                    Modiffication
                                                  </h5>
                                                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <form action="/updatePoste/<%= poste.id_poste %>?_method=PUT" method="post">
                                                  <div class="modal-body">
                                                    
                                                      <!-- Row starts -->
                                                      <div class="row gx-3">
                                                        <div class="col-sm-12">
                                                          <div class="bg-light rounded-2 px-3 py-2 mb-3">
                                                            <h6 class="m-0">Details du Poste</h6>
                                                          </div>
                                                        </div>
                                                        <div class="col-xxl-3 col-lg-4 col-sm-6">
                                                          <div class="mb-3">
                                                            <label class="form-label" for="a1">Nom du poste<span class="text-danger">*</span></label>
                                                            <input type="text" class="form-control" id="a1" placeholder="Entrer le nom" value="<%= poste.nom_poste%>" name="nom" required>
                                                          </div>
                                                        </div>
                                                        <div class="col-xxl-3 col-lg-4 col-sm-6">
                                                          <div class="mb-3">
                                                            <label class="form-label" for="a2">Salaire <span class="text-danger">*</span></label>
                                                            <input type="number" min="0" step="0.01" class="form-control" id="a2" placeholder="Entrer le salaire" value="<%= poste.salaire%>" name="salaire" required>
                                                          </div>
                                                        </div>
                                                        <div class="col-xxl-3 col-lg-4 col-sm-6">
                                                          <div class="mb-3">
                                                            <label class="form-label" for="a2">Description <span class="text-danger">*</span></label>
                                                            <textarea class="form-control" id="a8" placeholder="Enter une description du poste"  rows="2" name="desc"><%= poste.description%></textarea>
                                                          </div>
                                                        </div>
                                                      <!-- Row ends -->
                                                      
                                                    
                                                  </div>
                                                  <div class="modal-footer">
                                                    <div class="col-sm-12">
                                                      <div class="d-flex gap-2 justify-content-end">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                          annuler
                                                        </button>
                                                        <button type="submit" class="btn btn-primary">Appliquer les modification</button>
                                                      </div>
                                                    </div>
                                                    <!-- <a href="/updatePoste/<%= poste.id_poste %>" class="btn btn-danger"
                                                      data-bs-title="Modifier">
                                                      Appliquer les modification
                                                    </a> -->
                                                  </div>
                                                </form>
                                              </div>
                                            </div>
                                          </div>
                                      <!-- Card ends -->
                                    
                                    <!-- ----------------------------------------------------------------------------------------- -->
                                    <a href="onePersonnel/<%= poste.id_poste %>" class="btn btn-outline-info btn-sm"
                                      data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="voir le Profile" style = "visibility: hidden;">
                                      <i class="ri-eye-line"></i>
                                    </a>
                                  </div>
                                </td>
                              </tr>
                          <% }) %>
                        </tbody>
                      
                        <!-- <tr class="bg-info"><td colspan="3" id="resulta">ok</td></tr> -->
                      </table>
                      <table id="" class="table truncate m-0 align-middle dataTable">
                        <thead class="text-center">
                          <tr>
                            <th>Somme de salaire: </th>
                            <th id="resulta"></th>
                          </tr>
                        </thead>
                      </table>
                    </div>
                    <!-- Table ends -->

                    <!-- Modal Delete Row -->
                    <!-- ----------------------------------------------------------------------------------- -->
                    
                    <!-- ----------------------------------------------------------------------------------- -->
                  </div>
                </div>
              </div>
            </div>
            <!-- Row ends -->
             <br>
             <!-- ----------------------------------------------------------------------------------- -->
            <div class="row gx-3">
              <div class="col-sm-12">
                <div class="card">
                  <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="card-title">Ajouter un nouveau Poste</h5>
                  </div>
                  <div class="card-body">
                    <form action="/addPoste" method="post" id="formAddPoste">
                      <!-- Row starts -->
                      <div class="row gx-3">
                        <div class="col-sm-12">
                          <div class="bg-light rounded-2 px-3 py-2 mb-3">
                            <h6 class="m-0">Details du Poste</h6>
                          </div>
                        </div>
                        <div class="col-xxl-3 col-lg-4 col-sm-6">
                          <div class="mb-3">
                            <label class="form-label" for="a1">Nom du poste<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="a1" style="text-transform: capitalize;" placeholder="Entrer le nom" name="nom" required>
                          </div>
                        </div>
                        <div class="col-xxl-3 col-lg-4 col-sm-6">
                          <div class="mb-3">
                            <label class="form-label" for="a2">Salaire <span class="text-danger">*</span></label>
                            <input type="number" min="0" step="0.01" class="form-control" id="a2" placeholder="Entrer le salaire" name="salaire" required>
                          </div>
                        </div>
                        <div class="col-xxl-3 col-lg-4 col-sm-6">
                          <div class="mb-3">
                            <label class="form-label" for="a2">Description <span class="text-danger">*</span></label>
                            <textarea class="form-control" id="a8" placeholder="Enter une description du poste" rows="2" name="desc" ></textarea>
                          </div>
                        </div>
                      <!-- Row ends -->
                      <div class="col-sm-12">
                        <div class="d-flex gap-2 justify-content-end">
                          <button type="submit" class="btn btn-primary">Ajouter</button>
                        </div>
                      </div>
                    </form>
                  </div>
              </div>
            </div>
         </div>
          <!-- App body ends -->

          <!-- App footer starts -->
          <div class="app-footer bg-white">
            <span>© OneLove admin 2026</span>
          </div>
          <!-- App footer ends -->

        </div>
        <!-- App container ends -->

      </div>
      <!-- Main container ends -->

    </div>
    <!-- Page wrapper ends -->

